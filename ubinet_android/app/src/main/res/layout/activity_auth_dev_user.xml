<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="#c9d7f9"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardElevation="20dp">

        <EditText
            android:id="@+id/dev_user_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:hint="보호 대상의 핸드폰 번호를 입력해주세요"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_check_isUser"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_white_circle"
            android:text="@string/btn_check_dev_user_num" />

        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>